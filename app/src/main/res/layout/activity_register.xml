<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"> <!-- Dark background -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="16dp"
        card_view:cardBackgroundColor="#121212"
        android:padding="24dp"
        android:outlineSpotShadowColor="#00FFFF"
        android:foregroundGravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText"
            android:text="âš¡ Create Account âš¡"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#00FFFF"
            android:fontFamily="monospace"
            android:shadowColor="#FF00FF"
            android:shadowRadius="10"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/email"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFF"
            android:drawableStart="@android:drawable/ic_dialog_email"
            android:drawablePadding="8dp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/password"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFF"
            android:drawableStart="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="8dp"
            android:padding="14dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btnRegister"
            android:text="âœ¨ Register"
            android:textAllCaps="false"
            android:textColor="#00FFFF"
            android:backgroundTint="#1A1A1A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:layout_marginBottom="12dp"
            android:elevation="8dp"
            android:fontFamily="monospace" />

        <Button
            android:id="@+id/btnToLogin"
            android:text="ðŸ”‘ Sudah punya akun?"
            android:textAllCaps="false"
            android:textColor="#00FFFF"
            android:backgroundTint="#222222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:fontFamily="monospace" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

    </RelativeLayout>
