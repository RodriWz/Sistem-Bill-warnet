 <?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3"
    android:padding="0dp">

    <!-- Guideline 20% dari atas -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/img_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardViewLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- CardView utama -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#1A1A1A"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚡ LOGIN CYBER ⚡"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#08FFE6"
                android:fontFamily="monospace"
                android:shadowColor="#FF00FF"
                android:shadowRadius="10"
                android:layout_marginBottom="24dp" />

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginBottom="12dp"
                app:startIconDrawable="@drawable/ic_email"
                app:boxBackgroundColor="#000000"
                app:boxStrokeColor="#08FFE6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginBottom="20dp"
                app:startIconDrawable="@drawable/ic_password"
                app:endIconMode="password_toggle"
                app:boxBackgroundColor="#000000"
                app:boxStrokeColor="#08FFE6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Tombol Login -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textColor="#000000"
                android:backgroundTint="#08FFE6"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                android:layout_marginBottom="10dp" />

            <!-- Tombol Daftar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BELUM PUNYA AKUN? DAFTAR"
                android:textColor="#000000"
                android:backgroundTint="#FF00FF"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Kontak (WA dan IG) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <!-- WhatsApp -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08995614636"
                    android:textColor="#25D366"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:drawableStart="@drawable/ic_wa"
                    android:drawablePadding="6dp"
                    android:layout_marginTop="20dp" />

                <!-- Instagram -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21rodr_"
                    android:textColor="#E1306C"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:drawableStart="@drawable/ic_ig"
                    android:drawablePadding="6dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

            <!-- Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="© 2025 RodriCyberCafe"
                android:textColor="#999999"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
